<% include ../partials/header %>

    <header class="jumbotron indexJumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                
                <a class="btn btn-primary" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
        <form action="/campgrounds" method="GET" class="form-inline pull-right" id="campground-search">
            <div class="form-group">
              <input type="text" name="search" placeholder="Search campground" class="form-control">
            </div>
        </form>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;" id="campground-grid">
        <% campgrounds.forEach(function(campground) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail indexThumbnail">
                    <img src="<%= campground.image %>">
                    <div class="caption">
                        <a href="/campgrounds/<%= campground._id %>"><h4><%= campground.name %></h4></a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
    
<% include ../partials/footer%>