<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>YelpCamp</title>
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script type="text/javascript" src="//platform-api.sharethis.com/js/sharethis.js#property=599b2dd9a3155100110e71c4&product=sticky-share-buttons"></script>
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
        
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                
                <a class="navbar-brand" href="/">YelpCamp</a>
          </div>
          <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <li class="<%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>">
                  <a href="/campgrounds">
                      <i class="fa fa-home fa-lg" aria-hidden="true"></i>
                  </a>
              </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <% if(!currentUser){ %>
                    <li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>">
                        <a href="/login">
                            Login <i class="fa fa-user" aria-hidden="true"></i>
                        </a>
                    </li>
                    <li class="<%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>">
                        <a href="/register">
                            Sign Up <i class="fa fa-user-plus" aria-hidden="true"></i>
                        </a>
                    </li>
                <% } else { %>
                    <li><a href="/users/<%= currentUser.id %>">Signed In As <%= currentUser.username %></a></li>
                    <li>
                        <a href="/logout">
                            Logout <i class="fa fa-sign-out" aria-hidden="true"></i>
                        </a>
                    </li>
                <% } %>
            </ul>
          </div>
      </div>
    </nav>

        
    <div class="container">
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
    </div>
    
    <div class="container">